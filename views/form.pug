extends layout

block content
  h1 #{title}

  form(method='POST' action='/new')
    div.form-group
      label(for='msgtxt') Message:
      input#msgtxt.form-control(type='text', placeholder='Message Text...' name='msgtxt' value='')
    div.form-group
      label(for='author') Author:
      input#author.form-control(type='text', placeholder='Author Name' name='author' value='')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
